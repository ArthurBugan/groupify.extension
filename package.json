{
  "name": "youtube-channels-manager",
  "displayName": "Groupify - Organize youtube subscriptions",
  "version": "0.3.0",
  "description": "Organize your youtube channels into groups and lists. Access them from Youtube the sidebar, and have fun.",
  "author": "arthurbugan",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.0",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.10.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tanstack/react-table": "^8.9.1",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "cmdk": "^0.2.0",
    "lucide-react": "^0.206.0",
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.43.9",
    "react-icons": "^4.9.0",
    "react-virtuoso": "^4.3.8",
    "tailwind-merge": "^1.13.0",
    "tailwindcss-animate": "^1.0.5",
    "uuid": "^9.0.1",
    "zod": "^3.21.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@plasmohq/bms": "^2.3.1",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.227",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "prettier": "2.8.7",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.3"
  },
  "manifest": {
    "host_permissions": [
      "http://localhost:3000/*",
      "https://youtube.com/*",
      "https://www.youtube.com/*",
      "https://groupify.dev/*",
      "https://www.crunchyroll.com/*",
      "https://www.tiktok.com/*"
    ],
    "permissions": [
      "storage",
      "scripting",
      "activeTab",
      "tabs"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.groupify.dev/*",
        "*://*.localhost/*"
      ]
    },
    "web_accessible_resources": [
      {
        "resources": [
          "options.html",
          "assets/icon.png"
        ],
        "matches": [
          "*://*.youtube.com/*",
          "*://*.groupify.dev/*",
          "*://*.localhost/*"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
