{
  "name": "youtube-channels-manager",
  "displayName": "Groupify Youtube Organize",
  "version": "1.0.7",
  "description": "Organize your youtube channels into groups and lists. Access them from Crunchyroll and Youtube the sidebar",
  "author": "arthurbugan",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "dev-firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "build": "plasmo build",
    "build-firefox": "plasmo build --target=firefox-mv2 --hoist",
    "build-ios": "plasmo build --target=safari-mv3 --hoist",
    "copy-assets": "cp -R build/safari-mv3-prod/* 'groupify-ios/iOS (Extension)/'",
    "package": "plasmo package"
  },
  "browser": {
    "node:module": false
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@iconify-icon/react": "^3.0.1",
    "@plasmohq/messaging": "0.7.2",
    "@plasmohq/storage": "1.15.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/react-query": "5.90.2",
    "@tanstack/react-query-devtools": "5.90.2",
    "@tanstack/react-table": "^8.9.1",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "jiti": "^2.6.1",
    "lucide-react": "0.546.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.65.0",
    "react-icons": "5.5.0",
    "react-virtuoso": "^4.3.8",
    "sonner": "^2.0.7",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "^1.0.5",
    "uuid": "13.0.0",
    "zod": "4.1.12",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@plasmohq/bms": "2.6.1",
    "@plasmohq/prettier-plugin-sort-imports": "4.0.1",
    "@types/chrome": "0.1.24",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "5.0.3"
  },
  "manifest": {
    "host_permissions": [
      "https://youtube.com/*",
      "https://www.youtube.com/*",
      "https://groupify.dev/*",
      "https://coolify.groupify.dev/*",
      "https://api.groupify.dev/*",
      "https://www.crunchyroll.com/*",
      "https://www.tiktok.com/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "cookies"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.iconify.design/*",
        "*://*.youtube.com/*",
        "*://*.groupify.dev/*"
      ]
    },
    "web_accessible_resources": [
      {
        "resources": [
          "options.html",
          "assets/icon.png"
        ],
        "matches": [
          "*://*.iconify.design/*",
          "*://*.youtube.com/*",
          "*://*.groupify.dev/*"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
